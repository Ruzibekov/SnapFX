<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.otaliastudios.cameraview.CameraView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true" />

    <HorizontalScrollView
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/filter_gray"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"/>

            <ImageView
                android:id="@+id/filter_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_contrast"
                android:background="@android:color/darker_gray"/>

            <View
                android:id="@+id/filter_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"/>

            <View
                android:id="@+id/filter_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"/>

            <View
                android:id="@+id/filter_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"/>

            <View
                android:id="@+id/filter_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"/>

            <View
                android:id="@+id/filter_7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"/>

            <View
                android:id="@+id/filter_8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"/>

            <View
                android:id="@+id/filter_9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"/>

            <View
                android:id="@+id/filter_10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"/>

            <View
                android:id="@+id/filter_11"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"/>

            <View
                android:id="@+id/filter_12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"/>

            <View
                android:id="@+id/filter_13"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"/>

            <View
                android:id="@+id/filter_14"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"/>

            <View
                android:id="@+id/filter_15"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/take_photo"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="photo"/>

</FrameLayout>